  <script>
    // Preloader
    window.addEventListener('load', () => {
      gsap.to('#preloader', { opacity: 0, duration: 0.5, onComplete: () => document.getElementById('preloader').classList.add('hidden') });
    });

    // PWA Service Worker
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('data:application/javascript;base64,c2VsZi5hZGRFdmVudExpc3RlbmVyKCdpbnN0YWxsJywgZXZlbnQgPT4gZXZlbnQud2FpdFVudGlsKHNlbGYuc2tpcFdhaXRpbmdGb3JRVVVNRV8oJ3NraXAtd2hpbGUtcmVsb2FkaW5nJykpKTs=').catch(console.error);
    }

    // Enhanced Cursor Trail
    const cursorTrail = document.getElementById('cursorTrail');
    let mousePos = { x: 0, y: 0 };
    document.addEventListener('mousemove', (e) => {
      mousePos.x = e.clientX;
      mousePos.y = e.clientY;
      gsap.to(cursorTrail, { duration: 0.3, left: mousePos.x, top: mousePos.y });
    });

    // Mouse Glow
    const mouseGlow = document.getElementById('mouseGlow');
    document.addEventListener('mousemove', (e) => {
      mouseGlow.style.left = (e.clientX - 150) + 'px';
      mouseGlow.style.top = (e.clientY - 150) + 'px';
    });

    // Enhanced Particles with Mouse Interaction
    const particlesContainer = document.getElementById('particles');
    const particles = [];
    for (let i = 0; i < 50; i++) {
      const particle = document.createElement('div');
      particle.className = 'particle';
      const size = Math.random() * 4 + 2;
      particle.style.width = size + 'px';
      particle.style.height = size + 'px';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.top = Math.random() * 100 + '%';
      particle.style.animationDelay = Math.random() * 20 + 's';
      particle.style.animationDuration = (Math.random() * 20 + 10) + 's';
      particlesContainer.appendChild(particle);
      particles.push({
        element: particle,
        x: parseFloat(particle.style.left) * window.innerWidth / 100,
        y: parseFloat(particle.style.top) * window.innerHeight / 100,
        vx: (Math.random() - 0.5) * 2,
        vy: (Math.random() - 0.5) * 2
      });
    }

    function updateParticles() {
      particles.forEach(p => {
        const dx = mousePos.x - p.x;
        const dy = mousePos.y - p.y;
        const dist = Math.sqrt(dx * dx + dy * dy);
        if (dist < 100) {
          const force = (100 - dist) / 100 * 5;
          p.vx -= dx / dist * force;
          p.vy -= dy / dist * force;
        }
        p.x += p.vx;
        p.y += p.vy;
        p.vx *= 0.95;
        p.vy *= 0.95;
        if (p.x < 0 || p.x > window.innerWidth) p.vx *= -1;
        if (p.y < 0 || p.y > window.innerHeight) p.vy *= -1;
        p.element.style.left = (p.x / window.innerWidth * 100) + '%';
        p.element.style.top = (p.y / window.innerHeight * 100) + '%';
      });
      requestAnimationFrame(updateParticles);
    }
    updateParticles();

    // Matrix Rain
    const matrixRain = document.getElementById('matrixRain');
    const chars = '01„Ç¢„Ç§„Ç¶„Ç®„Ç™„Ç´„Ç≠„ÇØ„Ç±„Ç≥„Çµ„Ç∑„Çπ„Çª„ÇΩ„Çø„ÉÅ„ÉÑ„ÉÜ„Éà„Éä„Éã„Éå„Éç„Éé„Éè„Éí„Éï„Éò„Éõ„Éû„Éü„É†„É°„É¢„É§„É¶„É®„É©„É™„É´„É¨„É≠„ÉØ„É≤„É≥';
    for (let i = 0; i < 100; i++) {
      const span = document.createElement('span');
      span.textContent = chars[Math.floor(Math.random() * chars.length)];
      span.style.position = 'absolute';
      span.style.left = Math.random() * 100 + '%';
      span.style.top = Math.random() * 100 + '%';
      span.style.animationDelay = Math.random() * 10 + 's';
      matrixRain.appendChild(span);
    }

    // Typewriter
    const texts = [
      'Cloud Security Engineer',
      'Cybersecurity Specialist',
      'System Architect',
      'Security Software Developer'
    ];
    let textIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    const typewriterElement = document.getElementById('typewriterText');

    function typeWriter() {
      const currentText = texts[textIndex];
      if (isDeleting) {
        typewriterElement.textContent = currentText.substring(0, charIndex - 1);
        charIndex--;
      } else {
        typewriterElement.textContent = currentText.substring(0, charIndex + 1);
        charIndex++;
      }
      let typeSpeed = isDeleting ? 50 : 100;
      if (!isDeleting && charIndex === currentText.length) {
        typeSpeed = 2000;
        isDeleting = true;
      } else if (isDeleting && charIndex === 0) {
        isDeleting = false;
        textIndex = (textIndex + 1) % texts.length;
        typeSpeed = 500;
      }
      setTimeout(typeWriter, typeSpeed);
    }
    typeWriter();

    gsap.registerPlugin(ScrollTrigger);

    // Staggered Text Animations for Section Titles with Morph
    document.querySelectorAll('.section-title').forEach(title => {
      gsap.from(title.querySelectorAll('span'), {
        opacity: 0,
        y: 20,
        rotation: 180,
        stagger: 0.05,
        duration: 0.8,
        ease: "back.out(1.7)",
        scrollTrigger: {
          trigger: title,
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });
    });

    // Enhanced Section Animations with Parallax
    gsap.utils.toArray('section').forEach(section => {
      gsap.from(section, {
        opacity: 0,
        y: 50,
        rotationX: 30,
        duration: 1.2,
        scrollTrigger: {
          trigger: section,
          start: 'top 80%',
          end: 'top 50%',
          scrub: 1
        }
      });
    });

    // Enhanced Project Cards with Parallax and Tilt
    gsap.utils.toArray('.project-card').forEach((card, index) => {
      gsap.from(card, {
        opacity: 0,
        y: 50,
        scale: 0.8,
        rotation: -10,
        duration: 0.8,
        delay: index * 0.1,
        scrollTrigger: {
          trigger: card,
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      });
      gsap.to(card, {
        y: () => -(ScrollTrigger.positionInViewport(card, 'center') * 50),
        ease: 'none',
        scrollTrigger: {
          trigger: card,
          start: 'top bottom',
          end: 'bottom top',
          scrub: true
        }
      });
    });

    VanillaTilt.init(document.querySelectorAll(".tilt-card"), {
      max: 15,
      speed: 400,
      glare: true,
      "max-glare": 0.5,
    });

    // Timeline Animations
    gsap.utils.toArray('.timeline-item').forEach((item, index) => {
      gsap.from(item, {
        opacity: 0,
        x: -50,
        rotationY: 90,
        duration: 0.8,
        delay: index * 0.2,
        scrollTrigger: {
          trigger: item,
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      });
    });

    // Enhanced Skill Cards with Parallax and Tilt
    gsap.utils.toArray('.skill-card').forEach((card, index) => {
      gsap.from(card, {
        opacity: 0,
        scale: 0.8,
        rotation: 180,
        duration: 0.6,
        delay: index * 0.05,
        scrollTrigger: {
          trigger: card,
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      });
      gsap.to(card, {
        y: () => -(ScrollTrigger.positionInViewport(card, 'center') * 30),
        ease: 'none',
        scrollTrigger: {
          trigger: card,
          start: 'top bottom',
          end: 'bottom top',
          scrub: true
        }
      });
    });

    // Skill Progress Bars
    gsap.utils.toArray('.skill-progress').forEach(bar => {
      const progress = bar.getAttribute('data-progress');
      gsap.to(bar, {
        width: progress + '%',
        duration: 1.5,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: bar,
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      });
    });

    // Statistics Counters
    gsap.utils.toArray('.stat-number').forEach(counter => {
      const target = parseInt(counter.getAttribute('data-target'));
      gsap.to(counter, {
        textContent: target,
        duration: 2,
        snap: { textContent: 1 },
        ease: "power2.out",
        scrollTrigger: {
          trigger: counter,
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        },
        onUpdate: function() {
          counter.textContent = Math.ceil(counter.textContent);
        }
      });
    });

    // Enhanced Certifications with 3D Rotation
    gsap.utils.toArray('.cert-card').forEach((card, index) => {
      gsap.from(card, {
        opacity: 0,
        y: 30,
        rotationX: 90,
        duration: 0.8,
        delay: index * 0.1,
        scrollTrigger: {
          trigger: card,
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      });
    });

    // Testimonials Animation
    gsap.utils.toArray('.testimonial-card').forEach((card, index) => {
      gsap.from(card, {
        opacity: 0,
        y: 30,
        scale: 0.9,
        duration: 0.8,
        delay: index * 0.2,
        scrollTrigger: {
          trigger: card,
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      });
    });

    // Blog Cards Animation
    gsap.utils.toArray('.blog-card').forEach((card, index) => {
      gsap.from(card, {
        opacity: 0,
        x: -50,
        duration: 0.8,
        delay: index * 0.1,
        scrollTrigger: {
          trigger: card,
          start: 'top 85%',
          toggleActions: 'play none none reverse'
        }
      });
    });

    // Smooth Scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          gsap.to(window, {duration: 1, scrollTo: target});
        }
      });
    });

    // Active Nav Link
    window.addEventListener('scroll', () => {
      let current = '';
      document.querySelectorAll('section').forEach(section => {
        const sectionTop = section.offsetTop;
        if (pageYOffset >= sectionTop - 200) {
          current = section.getAttribute('id');
        }
      });

      document.querySelectorAll('.nav-links a').forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('href') === '#' + current) {
          link.classList.add('active');
        }
      });
    });

    // Mobile Menu with Stagger
    const mobileMenu = document.querySelector('.mobile-menu');
    const navLinks = document.querySelector('.nav-links');
    
    mobileMenu.addEventListener('click', () => {
      navLinks.style.display = navLinks.style.display === 'flex' ? 'none' : 'flex';
      if (navLinks.style.display === 'flex') {
        navLinks.style.position = 'absolute';
        navLinks.style.top = '100%';
        navLinks.style.left = '0';
        navLinks.style.right = '0';
        navLinks.style.flexDirection = 'column';
        navLinks.style.background = 'rgba(15, 23, 42, 0.95)';
        navLinks.style.padding = '1rem';
        navLinks.style.gap = '1rem';
        gsap.from(navLinks.querySelectorAll('a'), {
          opacity: 0,
          y: -20,
          stagger: 0.1,
          duration: 0.3
        });
      }
    });

    // Theme Toggle
    function toggleTheme() {
      document.body.classList.toggle('light-mode');
      const btn = document.querySelector('.theme-toggle');
      btn.textContent = document.body.classList.contains('light-mode') ? '‚òÄÔ∏è' : 'üåô';
      localStorage.setItem('theme', document.body.classList.contains('light-mode') ? 'light' : 'dark');
    }

    if (localStorage.getItem('theme') === 'light') {
      document.body.classList.add('light-mode');
      document.querySelector('.theme-toggle').textContent = '‚òÄÔ∏è';
    }

    // Resume Download
    function downloadResume(event) {
      event.preventDefault();
      alert('Resume download initiated! (Replace with actual PDF link)');
    }

    // Enhanced Contact Form with Validation
    function handleSubmit(event) {
      event.preventDefault();
      const form = event.target;
      const name = form.name.value.trim();
      const email = form.email.value.trim();
      const message = form.message.value.trim();
      let isValid = true;

      // Reset errors
      document.querySelectorAll('.error-message').forEach(el => el.style.display = 'none');

      if (!name) {
        document.getElementById('nameError').style.display = 'block';
        isValid = false;
      }

      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        document.getElementById('emailError').style.display = 'block';
        isValid = false;
      }

      if (!message || message.length < 10) {
        document.getElementById('messageError').style.display = 'block';
        isValid = false;
      }

      if (isValid) {
        const submitBtn = document.getElementById('submitBtn');
        submitBtn.disabled = true;
        submitBtn.textContent = 'Sending...';
        // Simulate send
        setTimeout(() => {
          alert('Message sent successfully! (Integrate with actual email service)');
          form.reset();
          submitBtn.disabled = false;
          submitBtn.textContent = 'Send Message';
        }, 2000);
      }
    }

    // Project Search
    const searchInput = document.getElementById('projectSearch');
    const projectsGrid = document.getElementById('projectsGrid');
    searchInput.addEventListener('input', (e) => {
      const query = e.target.value.toLowerCase();
      Array.from(projectsGrid.children).forEach(card => {
        const keywords = card.getAttribute('data-keywords') || '';
        card.style.display = keywords.includes(query) || query === '' ? 'block' : 'none';
      });
    });

    // Modal
    const modal = document.getElementById('projectModal');
    const projectData = {
      'network-audit': {
        title: 'Network Audit Tool',
        desc: 'Automated network assessments with device discovery, configuration analysis, and compliance reporting through an interactive dashboard. This tool scans enterprise networks for vulnerabilities and generates actionable reports.',
        tech: ['Python', 'Django', 'SQL', 'Linux'],
        link: 'https://github.com/example/network-audit'
      },
      'ddos-tool': {
        title: 'DDoS Build & Activation Tool',
        desc: 'Real-time DDoS mitigation platform integrating with Arbor and network routers for instant threat response. Handles high-volume attacks with automated activation and monitoring.',
        tech: ['Python', 'Django', 'Arbor', 'Nokia/Juniper'],
        link: 'https://github.com/example/ddos-tool'
      },
      'c2-server': {
        title: 'Command & Control Server',
        desc: 'Advanced C2 framework built for security research and penetration testing operations. Features encrypted communication, modular payloads, and scalable agent management.',
        tech: ['Python', 'PostgreSQL', 'Nginx', 'Django'],
        link: 'https://github.com/sushink70/anglerC2'
      },
      'memerase': {
        title: 'MemErase',
        desc: 'Deep memory erasure tool for secure data sanitization at the hardware level. Ensures complete wipe of sensitive data from RAM and caches to prevent forensic recovery.',
        tech: ['C++', 'Memory Management'],
        link: 'https://github.com/sushink70/memErase'
      }
    };

    function openModal(id) {
      const data = projectData[id];
      if (data) {
        document.getElementById('modalTitle').textContent = data.title;
        document.getElementById('modalDesc').textContent = data.desc;
        const techHtml = data.tech.map(tag => `<span class="tech-tag">${tag}</span>`).join('');
        document.getElementById('modalTech').innerHTML = `<div class="tech-tags">${techHtml}</div>`;
        document.getElementById('modalLink').innerHTML = data.link ? `<a href="${data.link}" target="_blank" class="btn btn-secondary" style="margin-top: 1rem;">View on GitHub</a>` : '';
        modal.style.display = 'block';
        gsap.from('.modal-content', { scale: 0.8, opacity: 0, duration: 0.5, ease: 'back.out(1.7)' });
      }
    }

    function closeModal() {
      gsap.to('.modal-content', { scale: 0.8, opacity: 0, duration: 0.3, onComplete: () => modal.style.display = 'none' });
    }

    window.onclick = function(event) {
      if (event.target === modal) {
        closeModal();
      }
    }
  </script>
</body>
</html>
